{
  "info": {
    "name": "PruebaDevSu Banco API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Colección de endpoints para la prueba técnica DevSu (clientes, cuentas, movimientos y reportes). Usa la variable baseUrl para apuntar al backend: http://localhost:8080/api por defecto."
  },
  "item": [
    {
      "name": "Clientes",
      "item": [
        {
          "name": "Listar clientes",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/clientes",
              "host": ["{{baseUrl}}"],
              "path": ["clientes"]
            }
          }
        },
        {
          "name": "Crear cliente",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre\": \"Cliente Demo\",\n  \"estado\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/clientes",
              "host": ["{{baseUrl}}"],
              "path": ["clientes"]
            }
          }
        },
        {
          "name": "Actualizar cliente",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre\": \"Cliente Actualizado\",\n  \"estado\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/clientes/1",
              "host": ["{{baseUrl}}"],
              "path": ["clientes", "1"]
            }
          }
        },
        {
          "name": "Eliminar cliente",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/clientes/1",
              "host": ["{{baseUrl}}"],
              "path": ["clientes", "1"]
            }
          }
        }
      ]
    },
