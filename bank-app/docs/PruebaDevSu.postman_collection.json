    {
      "name": "Reportes",
      "item": [
        {
          "name": "Reporte movimientos por cliente y rango",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/reportes?clienteId=1&fechaInicio=2024-01-01&fechaFin=2024-12-31",
              "host": ["{{baseUrl}}"],
              "path": ["reportes"],
              "query": [
                {"key": "clienteId", "value": "1"},
                {"key": "fechaInicio", "value": "2024-01-01"},
                {"key": "fechaFin", "value": "2024-12-31"}
              ]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080/api"
    }
  ]
}
